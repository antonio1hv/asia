<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Práctica de Capitales de Asia</title>
    <script>
        let questions = [];
        let currentQuestionIndex = 0;
        let score = 0;

        async function startRound() {
            const response = await fetch('/start_round');
            questions = await response.json();
            currentQuestionIndex = 0;
            score = 0;
            nextQuestion();
        }

        function nextQuestion() {
            if (currentQuestionIndex < questions.length) {
                document.getElementById('question').innerText = `¿Cuál es la capital de ${questions[currentQuestionIndex]}?`;
                document.getElementById('answer').value = '';
            } else {
                alert(`Ronda terminada. Tu puntuación es: ${score} de ${questions.length}`);
                startRound();
            }
        }

        async function checkAnswer() {
            const country = questions[currentQuestionIndex];
            const capital = document.getElementById('answer').value;
            const response = await fetch('/check_answer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ country, capital })
            });
            const result = await response.json();
            if (result.correct) {
                score++;
                alert('¡Correcto!');
            } else {
                alert(`Incorrecto. La capital de ${country} es ${result.capital}`);
            }
            currentQuestionIndex++;
            nextQuestion();
        }

        document.addEventListener('DOMContentLoaded', startRound);
    </script>
</head>
<body>
    <h1>Práctica de Capitales de Asia</h1>
    <p id="question"></p>
    <input type="text" id="answer">
    <button onclick="checkAnswer()">Verificar</button>
    <br><br>
    <a href="/map" target="_blank">Ver Mapa</a>
</body>
</html>

